{
    "name": "fr3nch13/cakephp-jira",
    "description": "A CakePHP Plugin to intereact with Jira.",
    "keywords": ["cakephp", "plugin", "jira"],
    "homepage": "https://github.com/fr3nch13/cakephp-jira",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian French",
            "email": "fr3nch13@gmail.com",
            "homepage": "https://github.com/fr3nch13"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "lesstif/php-jira-rest-client": "^1.41"
    },
    "require-dev": {
        "cakephp/cakephp": "^3.8",
        "fr3nch13/cakephp-pta": "^1.1.0"
    },
    "autoload": {
        "psr-4": {
            "Fr3nch13\\Jira\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app/src",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "PtaApp\\": "vendor/fr3nch13/cakephp-pta/tests/test_app/src",
            "Fr3nch13\\Jira\\Test\\": "tests/",
            "Fr3nch13\\Jira\\Test\\Fixture\\": "tests/Fixture/"
        }
    },
    "scripts": {
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "pre-commit": [
            "@check",
            "@test-clover",
            "@phpdoc"
        ],
        "check": [
            "@cs-check",
            "@test"
        ],
        "fix": [
            "@cs-fix",
            "@cs-check"
        ],
        "cs-check": "vendor/bin/phpcs --colors -p -s --extensions=ctp,php ./src ./tests",
        "cs-fix": "vendor/bin/phpcbf --colors --extensions=ctp,php ./src ./tests",
        "phpdoc": [
            "export COMPOSER_PROCESS_TIMEOUT=9000",
            "@phpdoc-run",
            "@phpdoc-fix"
        ],
        "phpdoc-run": "vendor/bin/phpdoc --sourcecode -v",
        "phpdoc-fix": "php vendor/fr3nch13/phpdoc-markdown/bin/fixHtmlToMd.php",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-text",
        "test-clover": "vendor/bin/phpunit --coverage-clover=tmp/coverage.xml"
    },
    "config": {
        "sort-packages": true
    }
}
