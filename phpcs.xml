<?xml version="1.0"?>
<ruleset name="App">
    <config name="installed_paths" value="../../cakephp/cakephp-codesniffer"/>

    <rule ref="CakePHP"/>
    <arg value="s"/>

    <!-- Allow TODO tags -->
    <rule ref="Generic.Commenting.Todo.CommentFound">
        <severity>0</severity>
    </rule>
    <rule ref="Generic.Commenting.Todo.TaskFound">
        <severity>0</severity>
    </rule>
</ruleset>
